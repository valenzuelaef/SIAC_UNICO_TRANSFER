                        <p id="ErrorMessagetxtSendMail" class="alert-danger alert-message ErrorMessagetxtSendMail"></p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="company" class="label-cp">Teléfono de Referencia. (opcional)</label>
                        <input type="text" id="txtReferencePhone" class="form-control input-sm txtReferencePhone" aria-label="..." maxlength="12">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="company" class="label-cp">Punto de Atención.</label>
                        <select id="ddlCenterofAttention" class="form-control input-sm ddlCenterofAttention"></select>
                        <p id="ErrorMessageddlCenterofAttention" class="alert-danger alert-message"></p>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="company" class="label-cp">Notas.</label>
                        <textarea id="txtNote" class="form-control input-sm txtNote" rows="6"></textarea>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<style>
    .text-import {
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 15px;
        line-height: 15px;
        margin-top: 10px;
    }

    .datepicker table tr td.disabled, .datepicker table tr td.disabled:hover {
        background: red;
        color: white;
        cursor: default;
    }
</style>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")

<script type="text/javascript">
    function unavailable(date) {
        dmy = date.getDate() + "-" + (date.getMonth() + 1) + "-" + date.getFullYear();
        if ($.inArray(dmy, unavailableDates) == -1) {
            return [true, ""];
        } else {
            return [false, "", "No Disponible"];
        }
    }

    var date = new Date();
    date.setDate(date.getDate());
    $("#txtCalendar").datepicker({
        format: 'dd/mm/yyyy',
        startDate: date,
        autoclose: true,
        minDate: 0,
        // beforeShowDay: unavailable
    });
</script>